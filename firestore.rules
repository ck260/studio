rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for authentication
    function isAuthenticated() {
      return request.auth != null;
    }

    // Users collection: Users can only access their own document.
    match /users/{uid} {
      allow read, update, delete: if isAuthenticated() && request.auth.uid == uid;
      allow create: if isAuthenticated();
    }

    // Bugs collection: Authenticated users can create/read, but only the reporter can update/delete.
    match /bugs/{bugId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.reporterId == request.auth.uid;
    }

    // Comments collection: Authenticated users can create/read, but only the author can update/delete.
    match /comments/{commentId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.authorId == request.auth.uid;
    }
  }
}
